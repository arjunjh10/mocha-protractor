{
  "compilerOptions": {
      "target": "es6",
      "lib": ["es6", "dom"],
      "module": "commonjs",
      "sourceMap": true,
      "declaration": false,
      "removeComments": false,
      "noImplicitAny": false,
      "skipLibCheck": true,
      "outDir": "typeScript",
      "moduleResolution": "node",
      "types": ["node", "mocha"],
      "typeRoots": [ "./node_modules/@types" ],
      "allowSyntheticDefaultImports": true,
      "isolatedModules": true,
  },
  "exclude": [
      "node_modules",
      "typescript"
  ]
}